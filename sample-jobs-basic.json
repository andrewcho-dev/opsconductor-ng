{
  "format_version": "1.0",
  "export_timestamp": "2025-09-08T20:15:00.000000+00:00",
  "export_metadata": {
    "exported_by": "sample",
    "opsconductor_version": "2.0.0",
    "description": "Sample basic jobs for testing import",
    "job_count": 2
  },
  "jobs": [
    {
      "name": "Simple Server Check",
      "description": "Basic server health check workflow",
      "version": 1,
      "metadata": {},
      "parameters": {
        "server_name": {
          "type": "string",
          "default": "web-server",
          "description": "Target server to check"
        }
      },
      "nodes": [
        {
          "id": "start_1",
          "type": "flow.start",
          "position": { "x": 100, "y": 100 },
          "data": {
            "name": "Start Check",
            "trigger_type": "manual"
          }
        },
        {
          "id": "ping_server",
          "type": "action.command",
          "position": { "x": 100, "y": 200 },
          "data": {
            "name": "Ping Server",
            "command": "ping -c 3 {{server_name}}",
            "shell": "bash",
            "target": "localhost",
            "timeout": 30,
            "connection_type": "ssh",
            "description": "Check if server is reachable"
          }
        },
        {
          "id": "end_1",
          "type": "flow.end",
          "position": { "x": 100, "y": 300 },
          "data": {
            "name": "End Check",
            "status": "success"
          }
        }
      ],
      "edges": [
        {
          "id": "e1",
          "source": "start_1",
          "target": "ping_server",
          "condition": "always"
        },
        {
          "id": "e2",
          "source": "ping_server",
          "target": "end_1",
          "condition": "always"
        }
      ]
    },
    {
      "name": "Database Backup",
      "description": "Automated database backup workflow",
      "version": 1,
      "metadata": {},
      "parameters": {
        "db_name": {
          "type": "string",
          "default": "production",
          "description": "Database name to backup"
        },
        "backup_path": {
          "type": "string",
          "default": "/backups",
          "description": "Path to store backup files"
        }
      },
      "nodes": [
        {
          "id": "start_1",
          "type": "flow.start",
          "position": { "x": 150, "y": 100 },
          "data": {
            "name": "Start Backup",
            "trigger_type": "scheduled"
          }
        },
        {
          "id": "create_backup",
          "type": "action.command",
          "position": { "x": 150, "y": 200 },
          "data": {
            "name": "Create Database Backup",
            "command": "mysqldump {{db_name}} > {{backup_path}}/{{db_name}}_$(date +%Y%m%d_%H%M%S).sql",
            "shell": "bash",
            "target": "db-server",
            "timeout": 300,
            "connection_type": "ssh",
            "description": "Create timestamped database backup"
          }
        },
        {
          "id": "notify_success",
          "type": "action.notification",
          "position": { "x": 150, "y": 300 },
          "data": {
            "name": "Notify Success",
            "notification_type": "email",
            "message": "Database backup completed successfully for {{db_name}}",
            "recipients": ["admin@company.com"],
            "description": "Send success notification"
          }
        },
        {
          "id": "end_1",
          "type": "flow.end",
          "position": { "x": 150, "y": 400 },
          "data": {
            "name": "End Backup",
            "status": "success"
          }
        }
      ],
      "edges": [
        {
          "id": "e1",
          "source": "start_1",
          "target": "create_backup",
          "condition": "always"
        },
        {
          "id": "e2",
          "source": "create_backup",
          "target": "notify_success",
          "condition": "always"
        },
        {
          "id": "e3",
          "source": "notify_success",
          "target": "end_1",
          "condition": "always"
        }
      ]
    }
  ]
}