{
  "realm": "opsconductor",
  "displayName": "OpsConductor Identity Management",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "registrationEmailAsUsername": false,
  "rememberMe": true,
  "verifyEmail": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 30,
  "defaultSignatureAlgorithm": "RS256",
  "revokeRefreshToken": false,
  "refreshTokenMaxReuse": 0,
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "ssoSessionIdleTimeoutRememberMe": 0,
  "ssoSessionMaxLifespanRememberMe": 0,
  "offlineSessionIdleTimeout": 2592000,
  "offlineSessionMaxLifespanEnabled": false,
  "offlineSessionMaxLifespan": 5184000,
  "clientSessionIdleTimeout": 0,
  "clientSessionMaxLifespan": 0,
  "clientOfflineSessionIdleTimeout": 0,
  "clientOfflineSessionMaxLifespan": 0,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "actionTokenGeneratedByAdminLifespan": 43200,
  "actionTokenGeneratedByUserLifespan": 300,
  "oauth2DeviceCodeLifespan": 600,
  "oauth2DevicePollingInterval": 5,
  "clients": [
    {
      "clientId": "opsconductor-frontend",
      "name": "OpsConductor Frontend Application",
      "description": "React frontend application for OpsConductor",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "opsconductor-frontend-secret-2024",
      "redirectUris": [
        "http://localhost:3100/*",
        "https://localhost:3100/*",
        "http://localhost/*",
        "https://localhost/*"
      ],
      "webOrigins": [
        "http://localhost:3100",
        "https://localhost:3100",
        "http://localhost",
        "https://localhost"
      ],
      "protocol": "openid-connect",
      "publicClient": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "authorizationServicesEnabled": false,
      "fullScopeAllowed": true,
      "nodeReRegistrationTimeout": -1,
      "defaultClientScopes": [
        "web-origins",
        "role_list",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    },
    {
      "clientId": "opsconductor-services",
      "name": "OpsConductor Backend Services",
      "description": "Service-to-service authentication for OpsConductor microservices",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "opsconductor-services-secret-2024",
      "protocol": "openid-connect",
      "publicClient": false,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "fullScopeAllowed": false,
      "nodeReRegistrationTimeout": -1,
      "defaultClientScopes": [
        "role_list",
        "profile",
        "roles",
        "email"
      ]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator role with full system access",
        "composite": false,
        "clientRole": false,
        "containerId": "opsconductor"
      },
      {
        "name": "operator",
        "description": "Operator role with operational access",
        "composite": false,
        "clientRole": false,
        "containerId": "opsconductor"
      },
      {
        "name": "viewer",
        "description": "Viewer role with read-only access",
        "composite": false,
        "clientRole": false,
        "containerId": "opsconductor"
      },
      {
        "name": "analyst",
        "description": "Analyst role with analysis and reporting access",
        "composite": false,
        "clientRole": false,
        "containerId": "opsconductor"
      },
      {
        "name": "guest",
        "description": "Guest role with limited access",
        "composite": false,
        "clientRole": false,
        "containerId": "opsconductor"
      }
    ]
  },
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "System",
      "lastName": "Administrator",
      "email": "admin@opsconductor.local",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": true
        }
      ],
