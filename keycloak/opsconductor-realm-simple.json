    },
    {
      "username": "operator",
      "enabled": true,
      "emailVerified": true,
      "firstName": "System",
      "lastName": "Operator",
      "email": "operator@opsconductor.local",
      "credentials": [
        {
          "type": "password",
          "value": "operator123",
          "temporary": true
        }
      ],
      "realmRoles": [
        "operator"
      ],
      "requiredActions": [
        "UPDATE_PASSWORD"
      ]
    }
  ],
  "groups": [
    {
      "name": "Administrators",
      "path": "/Administrators",
      "realmRoles": [
        "admin"
      ]
    },
    {
      "name": "Operators",
      "path": "/Operators",
      "realmRoles": [
        "operator"
      ]
    },
    {
      "name": "Viewers",
      "path": "/Viewers",
      "realmRoles": [
        "viewer"
      ]
    }
  ],
  "scopeMappings": [
    {
      "client": "opsconductor-services",
      "roles": [
        "admin",
        "operator",
        "viewer",
        "analyst",
        "guest"
      ]
    }
  ]
}