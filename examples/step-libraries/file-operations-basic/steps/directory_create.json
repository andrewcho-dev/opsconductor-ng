{
  "name": "directory.create",
  "display_name": "Create Directory",
  "category": "directory",
  "description": "Create a directory structure",
  "icon": "üìÅ",
  "color": "#6f42c1",
  
  "inputs": 1,
  "outputs": 1,
  
  "parameters": {
    "path": {
      "type": "string",
      "required": true,
      "description": "Directory path to create",
      "default": "/path/to/directory"
    },
    "parents": {
      "type": "boolean",
      "required": false,
      "description": "Create parent directories if they don't exist",
      "default": true
    },
    "mode": {
      "type": "string",
      "required": false,
      "description": "Directory permissions (octal)",
      "default": "755",
      "validation": {
        "pattern": "^[0-7]{3}$"
      }
    },
    "exist_ok": {
      "type": "boolean",
      "required": false,
      "description": "Don't raise error if directory already exists",
      "default": true
    }
  },
  
  "platform_support": ["windows", "linux", "macos"],
  "required_permissions": ["file_write"],
  
  "examples": [
    {
      "name": "Create simple directory",
      "description": "Create a single directory",
      "parameters": {
        "path": "/tmp/new_directory",
        "parents": false,
        "mode": "755",
        "exist_ok": true
      }
    },
    {
      "name": "Create nested directories",
      "description": "Create nested directory structure",
      "parameters": {
        "path": "/app/data/logs/archive",
        "parents": true,
        "mode": "755",
        "exist_ok": true
      }
    }
  ],
  
  "tags": ["directory", "create", "mkdir"]
}