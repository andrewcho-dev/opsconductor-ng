{
  "name": "file.read",
  "display_name": "Read File",
  "category": "file",
  "description": "Read contents from a file",
  "icon": "ðŸ“–",
  "color": "#28a745",
  
  "inputs": 1,
  "outputs": 1,
  
  "parameters": {
    "path": {
      "type": "string",
      "required": true,
      "description": "File path to read",
      "default": "/path/to/file.txt"
    },
    "encoding": {
      "type": "select",
      "required": false,
      "description": "File encoding",
      "default": "utf-8",
      "options": ["utf-8", "ascii", "latin-1", "utf-16"]
    },
    "binary": {
      "type": "boolean",
      "required": false,
      "description": "Read as binary file",
      "default": false
    },
    "max_size": {
      "type": "number",
      "required": false,
      "description": "Maximum file size to read (bytes)",
      "default": 10485760,
      "validation": {
        "min": 1,
        "max": 104857600
      }
    }
  },
  
  "platform_support": ["windows", "linux", "macos"],
  "required_permissions": ["file_read"],
  
  "examples": [
    {
      "name": "Read text file",
      "description": "Read a text file",
      "parameters": {
        "path": "/tmp/data.txt",
        "encoding": "utf-8",
        "binary": false
      }
    },
    {
      "name": "Read binary file",
      "description": "Read a binary file",
      "parameters": {
        "path": "/tmp/image.png",
        "binary": true,
        "max_size": 5242880
      }
    }
  ],
  
  "tags": ["file", "read", "content"]
}