{
  "name": "opsconductor-e2e-tests",
  "version": "1.0.0",
  "description": "Comprehensive end-to-end tests for OpsConductor",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:auth": "playwright test e2e/01-authentication.spec.ts",
    "test:dashboard": "playwright test e2e/02-dashboard.spec.ts",
    "test:users": "playwright test e2e/03-users.spec.ts",
    "test:credentials": "playwright test e2e/04-credentials.spec.ts",
    "test:targets": "playwright test e2e/05-targets.spec.ts",
    "test:discovery": "playwright test e2e/06-discovery.spec.ts",
    "test:jobs": "playwright test e2e/07-jobs.spec.ts",
    "test:schedules": "playwright test e2e/08-schedules.spec.ts",
    "test:job-runs": "playwright test e2e/09-job-runs.spec.ts",
    "test:notifications": "playwright test e2e/10-notifications.spec.ts",
    "test:settings": "playwright test e2e/11-settings.spec.ts",
    "test:integration": "playwright test e2e/12-integration-workflows.spec.ts",
    "test:smoke": "playwright test -g 'should display.*page with all components'",
    "test:report": "playwright test --reporter=html"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@types/node": "^20.0.0"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "opsconductor"
  ],
  "author": "OpsConductor Team",
  "license": "MIT"
}