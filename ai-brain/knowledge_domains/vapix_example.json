{
  "description": "Axis Camera VAPIX API for comprehensive video surveillance and camera control",
  "base_url": "http://{camera_ip}/axis-cgi/",
  "authentication": ["basic", "digest", "cookie"],
  "protocols": ["HTTP", "HTTPS", "RTSP"],
  "capabilities": {
    "ptz_control": {
      "description": "Pan, tilt, zoom camera control with preset positions",
      "keywords": ["pan", "tilt", "zoom", "ptz", "move", "position", "preset"],
      "endpoints": [
        {
          "path": "com/ptz.cgi",
          "method": "GET",
          "description": "Control camera movement and positioning",
          "parameters": {
            "camera": "Camera number (1-4)",
            "pan": "Pan position (-180 to 180 degrees)",
            "tilt": "Tilt position (-180 to 180 degrees)",
            "zoom": "Zoom level (1-9999)",
            "speed": "Movement speed (1-100)",
            "gotopreset": "Go to preset position (1-20)"
          },
          "examples": [
            "GET /axis-cgi/com/ptz.cgi?camera=1&pan=45&tilt=30&zoom=1000",
            "GET /axis-cgi/com/ptz.cgi?camera=1&gotopreset=5"
          ]
        }
      ],
      "use_cases": [
        "Security patrol automation",
        "Object tracking",
        "Area monitoring",
        "Preset position management"
      ]
    },
    "video_streaming": {
      "description": "Access live and recorded video streams in multiple formats",
      "keywords": ["video", "stream", "mjpeg", "rtsp", "live", "recording", "snapshot"],
      "endpoints": [
        {
          "path": "mjpg/video.cgi",
          "method": "GET",
          "description": "MJPEG video stream",
          "parameters": {
            "resolution": "Video resolution (e.g., 1920x1080, 1280x720)",
            "fps": "Frames per second (1-30)",
            "compression": "Compression level (0-100)",
            "camera": "Camera number (1-4)"
          },
          "examples": [
            "GET /axis-cgi/mjpg/video.cgi?resolution=1920x1080&fps=15",
            "GET /axis-cgi/mjpg/video.cgi?camera=1&compression=50"
          ]
        },
        {
          "path": "jpg/image.cgi",
          "method": "GET",
          "description": "Single JPEG snapshot",
          "parameters": {
            "resolution": "Image resolution",
            "camera": "Camera number",
            "compression": "JPEG compression level"
          },
          "examples": [
            "GET /axis-cgi/jpg/image.cgi?resolution=1920x1080"
          ]
        }
      ],
      "use_cases": [
        "Live monitoring dashboards",
        "Recording and archival",
        "Motion detection triggers",
        "Snapshot capture for alerts"
      ]
    },
    "event_management": {
      "description": "Configure and monitor camera events and triggers",
      "keywords": ["motion", "event", "alarm", "detection", "trigger", "notification"],
      "endpoints": [
        {
          "path": "admin/param.cgi",
          "method": "GET/POST",
          "description": "Configure event parameters and triggers",
          "parameters": {
            "action": "list, update, remove",
            "group": "Event group name (Motion, Audio, etc.)",
            "template": "Event template name"
          },
          "examples": [
            "GET /axis-cgi/admin/param.cgi?action=list&group=Motion",
            "POST /axis-cgi/admin/param.cgi?action=update&Motion.M1.Enabled=yes"
          ]
        },
        {
          "path": "admin/eventlog.cgi",
          "method": "GET",
          "description": "Access event logs",
          "parameters": {
            "action": "list, clear",
            "limit": "Number of events to return"
          },
          "examples": [
            "GET /axis-cgi/admin/eventlog.cgi?action=list&limit=100"
          ]
        }
      ],
      "use_cases": [
        "Motion detection setup",
        "Alarm configuration",
        "Event logging and analysis",
        "Automated response triggers"
      ]
    },
    "audio_control": {
      "description": "Audio recording and playback control",
      "keywords": ["audio", "sound", "recording", "playback", "speaker", "microphone"],
      "endpoints": [
        {
          "path": "audio/transmit.cgi",
          "method": "POST",
          "description": "Transmit audio to camera speakers",
          "parameters": {
            "duration": "Playback duration in seconds"
          },
          "examples": [
            "POST /axis-cgi/audio/transmit.cgi (with audio data)"
          ]
        }
      ],
      "use_cases": [
        "Two-way communication",
        "Audio alerts and announcements",
        "Audio recording for security"
      ]
    },
    "system_management": {
      "description": "Camera system configuration and status monitoring",
      "keywords": ["system", "status", "configuration", "network", "time", "users"],
      "endpoints": [
        {
          "path": "admin/param.cgi",
          "method": "GET",
          "description": "Get system parameters",
          "parameters": {
            "action": "list",
            "group": "System parameter group"
          },
          "examples": [
            "GET /axis-cgi/admin/param.cgi?action=list&group=Network"
          ]
        },
        {
          "path": "admin/restart.cgi",
          "method": "POST",
          "description": "Restart camera system",
          "parameters": {},
          "examples": [
            "POST /axis-cgi/admin/restart.cgi"
          ]
        }
      ],
      "use_cases": [
        "System health monitoring",
        "Configuration management",
        "Remote maintenance",
        "Network troubleshooting"
      ]
    }
  },
  "integration_patterns": [
    {
      "name": "Automated Security Patrol",
      "description": "Set up automated camera patrol with motion detection and alerts",
      "steps": [
        "Query asset service for VAPIX-enabled cameras using os_type filter",
        "Configure PTZ patrol routes with preset positions",
        "Set up motion detection events for each camera",
        "Configure email notifications for security events via communication service",
        "Schedule automated patrol using celery-beat with interval timing"
      ],
      "services_used": ["asset-service", "automation-service", "communication-service", "celery-beat"],
      "example_workflow": "User says 'patrol all cameras every 30 minutes' -> AI queries assets for cameras -> sets up PTZ movement -> configures motion detection -> schedules with celery-beat"
    },
    {
      "name": "Motion Detection Alert System",
      "description": "Comprehensive motion detection with immediate notifications",
      "steps": [
        "Identify target cameras from asset inventory",
        "Configure motion detection parameters via VAPIX",
        "Set up event monitoring and logging",
        "Configure immediate email/SMS alerts via communication service",
        "Optional: Capture snapshots when motion detected"
      ],
      "services_used": ["asset-service", "automation-service", "communication-service"],
      "example_workflow": "User says 'alert me when motion detected on lobby camera' -> AI finds lobby camera -> configures motion detection -> sets up email alerts"
    },
    {
      "name": "Scheduled Recording System",
      "description": "Automated video recording based on schedules or events",
      "steps": [
        "Query cameras from asset service",
        "Configure recording parameters and storage",
        "Set up scheduled recording via celery-beat",
        "Monitor recording status and storage space",
        "Send status reports via communication service"
      ],
      "services_used": ["asset-service", "automation-service", "celery-beat", "communication-service"],
      "example_workflow": "User says 'record lobby camera from 6pm to 6am daily' -> AI sets up scheduled recording with celery-beat"
    }
  ],
  "common_workflows": [
    "Camera discovery and inventory management",
    "Live stream monitoring setup",
    "Motion detection configuration",
    "PTZ preset position management",
    "Event-driven recording",
    "Multi-camera coordination",
    "Audio alert systems",
    "System health monitoring"
  ],
  "best_practices": [
    "Always authenticate before making API calls",
    "Use HTTPS for secure communication in production",
    "Implement rate limiting to avoid overwhelming cameras",
    "Cache camera capabilities to reduce API calls",
    "Use appropriate video quality settings for bandwidth constraints",
    "Configure proper motion detection zones to reduce false positives",
    "Regularly monitor camera system health and storage",
    "Use preset positions for efficient PTZ control"
  ],
  "troubleshooting": [
    {
      "issue": "Camera not responding to PTZ commands",
      "solutions": [
        "Check if camera supports PTZ functionality",
        "Verify authentication credentials",
        "Ensure camera is not in manual mode",
        "Check network connectivity"
      ]
    },
    {
      "issue": "Video stream not accessible",
      "solutions": [
        "Verify camera IP address and network connectivity",
        "Check video codec compatibility",
        "Ensure sufficient bandwidth",
        "Verify authentication and permissions"
      ]
    },
    {
      "issue": "Motion detection not triggering",
      "solutions": [
        "Check motion detection configuration",
        "Verify detection zones are properly set",
        "Adjust sensitivity settings",
        "Ensure event notifications are enabled"
      ]
    }
  ]
}