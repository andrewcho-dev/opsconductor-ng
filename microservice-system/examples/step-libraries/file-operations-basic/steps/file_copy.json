{
  "name": "file.copy",
  "display_name": "Copy File",
  "category": "file",
  "description": "Copy a file to a new location",
  "icon": "ðŸ“‹",
  "color": "#17a2b8",
  
  "inputs": 1,
  "outputs": 1,
  
  "parameters": {
    "source": {
      "type": "string",
      "required": true,
      "description": "Source file path",
      "default": "/path/to/source.txt"
    },
    "destination": {
      "type": "string",
      "required": true,
      "description": "Destination file path",
      "default": "/path/to/destination.txt"
    },
    "overwrite": {
      "type": "boolean",
      "required": false,
      "description": "Overwrite destination if it exists",
      "default": false
    },
    "preserve_permissions": {
      "type": "boolean",
      "required": false,
      "description": "Preserve file permissions",
      "default": true
    },
    "preserve_timestamps": {
      "type": "boolean",
      "required": false,
      "description": "Preserve file timestamps",
      "default": true
    }
  },
  
  "platform_support": ["windows", "linux", "macos"],
  "required_permissions": ["file_read", "file_write"],
  
  "examples": [
    {
      "name": "Simple file copy",
      "description": "Copy a file to a new location",
      "parameters": {
        "source": "/tmp/original.txt",
        "destination": "/backup/original.txt",
        "overwrite": false,
        "preserve_permissions": true
      }
    },
    {
      "name": "Backup with overwrite",
      "description": "Create a backup copy, overwriting if exists",
      "parameters": {
        "source": "/app/config.json",
        "destination": "/backup/config.json.bak",
        "overwrite": true,
        "preserve_timestamps": true
      }
    }
  ],
  
  "tags": ["file", "copy", "backup"]
}