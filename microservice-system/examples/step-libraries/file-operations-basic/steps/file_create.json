{
  "name": "file.create",
  "display_name": "Create File",
  "category": "file",
  "description": "Create a new file with specified content",
  "icon": "ðŸ“„",
  "color": "#007bff",
  
  "inputs": 1,
  "outputs": 1,
  
  "parameters": {
    "path": {
      "type": "string",
      "required": true,
      "description": "File path to create",
      "default": "/path/to/file.txt",
      "validation": {
        "pattern": "^[^<>:\"|?*]+$"
      }
    },
    "content": {
      "type": "string",
      "required": false,
      "description": "File content",
      "default": "",
      "multiline": true
    },
    "encoding": {
      "type": "select",
      "required": false,
      "description": "File encoding",
      "default": "utf-8",
      "options": ["utf-8", "ascii", "latin-1", "utf-16"]
    },
    "overwrite": {
      "type": "boolean",
      "required": false,
      "description": "Overwrite existing file",
      "default": false
    }
  },
  
  "platform_support": ["windows", "linux", "macos"],
  "required_permissions": ["file_write"],
  
  "examples": [
    {
      "name": "Create text file",
      "description": "Create a simple text file",
      "parameters": {
        "path": "/tmp/hello.txt",
        "content": "Hello, World!",
        "encoding": "utf-8",
        "overwrite": true
      }
    },
    {
      "name": "Create configuration file",
      "description": "Create a JSON configuration file",
      "parameters": {
        "path": "/etc/myapp/config.json",
        "content": "{\n  \"debug\": true,\n  \"port\": 8080\n}",
        "encoding": "utf-8",
        "overwrite": false
      }
    }
  ],
  
  "tags": ["file", "create", "write"]
}