# Production Environment Configuration
ENVIRONMENT=production
NODE_ENV=production

# Database Configuration
POSTGRES_PASSWORD=OpsConductor2024!SecureDB
POSTGRES_HOST=postgres-production
POSTGRES_PORT=5432
POSTGRES_DB=opsconductor
POSTGRES_USER=postgres

# Redis Configuration
REDIS_URL=redis://redis-production:6379/9

# AI Infrastructure
CHROMADB_URL=http://chromadb-production:8000
OLLAMA_HOST=http://ollama-production:11434

# Multi-Brain System
MULTI_BRAIN_ENABLED=true
INTENT_BRAIN_ENABLED=true
TECHNICAL_BRAIN_ENABLED=true
SME_BRAIN_ENABLED=true
ORCHESTRATOR_ENABLED=true

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
BRAIN_PROCESSING_TIMEOUT=60000
MAX_MEMORY_USAGE=6G
GPU_MEMORY_FRACTION=0.8

# Monitoring
METRICS_ENABLED=true
PROMETHEUS_METRICS=true
GRAFANA_PASSWORD=OpsConductor2024!Monitor
GRAFANA_DOMAIN=opsconductor.local

# Security
JWT_SECRET_KEY=OpsConductor2024!SuperSecureJWTKey!ProductionOnly
ENCRYPTION_KEY=OpsConductor2024!EncryptionKey!ProductionSecure

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/nginx.crt
SSL_KEY_PATH=/etc/nginx/ssl/nginx.key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/ai-brain.log

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30