# OpsConductor Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
POSTGRES_DB=opsconductor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/opsconductor

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Configuration
ENCRYPTION_KEY=your-encryption-key-for-credentials-32-bytes-long

# Service URLs (Internal)
IDENTITY_SERVICE_URL=http://identity-service:3001
ASSET_SERVICE_URL=http://asset-service:3002
AUTOMATION_SERVICE_URL=http://automation-service:3003
COMMUNICATION_SERVICE_URL=http://communication-service:3004

# External URLs (for frontend)
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@opsconductor.local

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Development Configuration
DEBUG=false
DEVELOPMENT_MODE=false

# Security Configuration
CORS_ORIGINS=["http://localhost:3100", "http://localhost:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=/app/uploads

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour
MAX_SESSIONS_PER_USER=5

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30